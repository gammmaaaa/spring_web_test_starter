spring:
  application:
    name: t1-java-demo
  datasource:
    url: "jdbc:postgresql://localhost:5432/t1_demo"
    username: bestuser
    password: bestuser
    driverClassName: org.postgresql.Driver
  liquibase:
    enabled: true
    change-log: db/changelog/db.changelog-master.xml
  jpa:
    hibernate:
      ddl-auto: none
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true

logging:
  level:
    ROOT: INFO
    ru.t1.java.demo.controller.ClientController: DEBUG

t1:
  count:
    transactions-rejected: 7
  scan-path: ru.t1.java.demo
  kafka:
    bootstrap:
      server: ${KAFKA_SERVER:localhost:9092}
    session:
      timeout:
        ms: 30000
    max:
      partition:
        fetch:
          bytes: 300000
      poll:
        records: 1
        interval:
          ms: 300000
    heartbeat:
      interval:
        ms: 3000
    consumer:
      client:
        group-id: t1-demo-client
      account:
        group-id: t1-demo-account
      transaction:
        group-id: t1-demo-transaction
      transaction_result:
        group-id: t1-demo-transaction-result
    producer:
      enable: true
    topic:
      client_registration: t1_demo_client_registration
      client_id_registered: t1_demo_client_registered
      accounts: t1_demo_accounts
      transactions: t1_demo_transactions
      metrics: t1_demo_metrics
      transaction_accept: t1_demo_transaction_accept
      transaction_result: t1_demo_transaction_result

    listener:
      poll-timeout: 1000

metrics:
  errors-to-track: JsonParseException, IOException
  kafka:
    enabled: ${TRACK_KAFKA_LOG_ENABLED:true}
    bootstrap-server: localhost:9092
    data-source-error-topic: t1_demo_data_source_error
    time-limit-exceed: t1_demo_time_limit_exceed
  db:
    enabled: false
  time-limit-exceed: 1000
  log-level: DEBUG
  datasource:
    url: "jdbc:postgresql://localhost:5432/t1_demo"
    username: bestuser
    password: bestuser
    driverClassName: org.postgresql.Driver
  liquibase:
    enabled: true
    change-log: db/changelog/db.changelog-master.xml
  jpa:
    hibernate:
      ddl-auto: none
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true


